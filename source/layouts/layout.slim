      header.header[role="banner"]
        .flip
          .logo
            a href="#{data.site.url}" rel="home" 
              .logo-background
          h1.logo-sign ROCHAS
        .description
          p="#{data.site.description}"
      .content
        section
          main[role="main"]
            = yield
          = partial "navigation"
      = partial "footer"

    

