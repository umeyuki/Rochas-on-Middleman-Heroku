html lang="ja"
  meta charset="utf-8"
  meta name="viewport" content="width=device-width,initial-scale=1"
  - if current_article.nil?
    / layout
    title = data.site.title
    meta property="og:title" content=data.site.title
    meta property="og:url" content=data.site.url
    meta property="og:type" content="blog"
    meta property="og:description" content=data.site.description
    meta property="og:image" content="#{data.site.url}/favicon-300.png"
  - else
    / post
    title= "#{current_article.title} - #{data.site.title}"
    meta property="og:title" content="#{current_article.title} - #{data.site.title}"
    meta property="og:url" content= "#{data.site.url}#{current_article.url}"
    meta property="og:type" content="article"
    meta property="og:description" content=current_article.data.description
    meta property="og:image" content=current_article.data.image
  
  meta property="og:locale" content="ja_JP"
  meta property="og:site_name" content=data.site.url
  meta property="fb:admins" content="100002871017327"
